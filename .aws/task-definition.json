{
  "family": "TASK-LMS-ECS",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "311141554934.dkr.ecr.ap-northeast-2.amazonaws.com/deploy/lms:latest",
      "cpu": 0,
      "portMappings": [
        {
          "name": "backend-8081-tcp",
          "containerPort": 8081,
          "hostPort": 8081,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_JPA_GENERATE_DDL",
          "value": "true"
        },
        {
          "name": "SERVER_PORT",
          "value": "8081"
        },
        {
          "name": "SPRING_DATASOURCE_DRIVER_CLASS_NAME",
          "value": "org.postgresql.Driver"
        },
        {
          "name": "SPRING_SERVLET_ENCODING_ENABLED",
          "value": "true"
        },
        {
          "name": "SPRING_SERVLET_ENCODING_CHARSET",
          "value": "UTF-8"
        },
        {
          "name": "SPRING_JPA_SHOW_SQL",
          "value": "true"
        },
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "${{RDS_DATASOURCE}}"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "${{ secrets.RDS_PASSWORD }}"
        },
        {
          "name": "SPRING_SERVLET_ENCODING_FORCE",
          "value": "true"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "${{ secrets.RDS_USERNAME }}"
        },
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "backend"
        },
        {
          "name": "SPRING_JPA_DATABASE",
          "value": "postgresql"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/TASK-LMS-ECS",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "systemControls": []
    }
  ],
  "executionRoleArn": "arn:aws:iam::311141554934:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "3072",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
